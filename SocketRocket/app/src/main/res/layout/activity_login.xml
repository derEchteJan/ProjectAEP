<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_floating_material_dark">

<!-- TITLE -->

    <TextView
        android:id="@+id/login_textview_title"
        android:layout_width="243dp"
        android:layout_height="58dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="200dp"
        android:text="Anmelden"
        android:textAlignment="center"
        android:textColor="@color/background_floating_material_light"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <!-- FORM INPUT -->

    <!-- Username -->
    <TextView
        android:id="@+id/login_textview_username"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="300dp"
        android:text="Name:"
        android:textAlignment="viewStart"
        android:textColor="@color/background_floating_material_light"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_textview_title" />
    <EditText
        android:id="@+id/login_edittext_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint=""
        android:textColor="@color/background_floating_material_light"
        android:textColorHighlight="#FF808080"
        android:textColorHint="#FF808080"
        android:textColorLink="@color/abc_search_url_text_normal"
        android:textCursorDrawable="@color/abc_search_url_text_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/login_textview_username" />


    <!-- Password -->
    <TextView
        android:id="@+id/login_textview_password"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="300dp"
        android:text="Passwort:"
        android:textAlignment="viewStart"
        android:textColor="@color/background_floating_material_light"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_textview_username" />
    <EditText
        android:id="@+id/login_edittext_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text=""
        android:hint=""
        android:textColor="@color/background_floating_material_light"
        android:textColorHighlight="#FF808080"
        android:textColorHint="#FF808080"
        android:textColorLink="@color/abc_search_url_text_normal"
        android:textCursorDrawable="@color/abc_search_url_text_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/login_textview_password" />


    <!-- LOGIN BUTTON -->
    <Button
        android:id="@+id/login_button_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="50dp"
        android:background="@color/abc_search_url_text_normal"
        android:text="Login"
        android:textColor="@color/bright_foreground_inverse_material_light"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_edittext_password" />


    <!-- GOTO REGISTRATION-->
    <TextView
        android:id="@+id/login_textview_goto_registration"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="0dp"
        android:text="Neu hier?"
        android:gravity="center"
        android:textColor="@color/bright_foreground_inverse_material_light"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/login_button_login"
        app:layout_constraintTop_toBottomOf="@id/login_button_login" />
    <Button
        android:id="@+id/login_button_goto_registration"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="5dp"
        android:text="Registrieren"
        app:layout_constraintStart_toEndOf="@id/login_textview_goto_registration"
        app:layout_constraintTop_toTopOf="@id/login_textview_goto_registration" />

</androidx.constraintlayout.widget.ConstraintLayout>