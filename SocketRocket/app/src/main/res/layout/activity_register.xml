<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_floating_material_dark">


    <!-- TITLE -->

    <TextView
        android:id="@+id/register_textview_title"
        android:layout_width="243dp"
        android:layout_height="58dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="200dp"
        android:text="Registrierung"
        android:textAlignment="center"
        android:textColor="@color/background_floating_material_light"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <!-- FORM INPUT -->

    <!-- Username -->
    <TextView
        android:id="@+id/register_textview_username"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="300dp"
        android:text="Name:"
        android:textAlignment="viewStart"
        android:textColor="@color/background_floating_material_light"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_textview_title" />
    <EditText
        android:id="@+id/register_edittext_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="z.B. Jeff34"
        android:textColor="@color/background_floating_material_light"
        android:textColorHighlight="#FF808080"
        android:textColorHint="#FF808080"
        android:textColorLink="@color/abc_search_url_text_normal"
        android:textCursorDrawable="@color/abc_search_url_text_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/register_textview_username" />


    <!-- Email -->
    <TextView
        android:id="@+id/register_textview_email"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="300dp"
        android:text="E-Mail:"
        android:textAlignment="viewStart"
        android:textColor="@color/background_floating_material_light"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_textview_username" />
    <EditText
        android:id="@+id/register_edittext_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="beispiel@mail.de"
        android:textColor="@color/background_floating_material_light"
        android:textColorHighlight="#FF808080"
        android:textColorHint="#FF808080"
        android:textColorLink="@color/abc_search_url_text_normal"
        android:textCursorDrawable="@color/abc_search_url_text_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/register_textview_email" />

    <!-- Password -->
    <TextView
        android:id="@+id/register_textview_password"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="300dp"
        android:text="Passwort:"
        android:textAlignment="viewStart"
        android:textColor="@color/background_floating_material_light"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_textview_email" />
    <EditText
        android:id="@+id/register_edittext_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text=""
        android:hint="Passwort (mind. 4 Zeichen)"
        android:textColor="@color/background_floating_material_light"
        android:textColorHighlight="#FF808080"
        android:textColorHint="#FF808080"
        android:textColorLink="@color/abc_search_url_text_normal"
        android:textCursorDrawable="@color/abc_search_url_text_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/register_textview_password" />
    <EditText
        android:id="@+id/register_edittext_password_repeat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text=""
        android:hint="Passwort wiederholen"
        android:textColor="@color/background_floating_material_light"
        android:textColorHighlight="#FF808080"
        android:textColorHint="#FF808080"
        android:textColorLink="@color/abc_search_url_text_normal"
        android:textCursorDrawable="@color/abc_search_url_text_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_edittext_password" />


    <!-- SIGNUP BUTTON -->
    <Button
        android:id="@+id/register_button_signup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="50dp"
        android:background="@color/abc_search_url_text_normal"
        android:text="Konto erstellen"
        android:textColor="@color/bright_foreground_inverse_material_light"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_edittext_password_repeat" />

</androidx.constraintlayout.widget.ConstraintLayout>